generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String?
  image     String?
  coins     Int      @default(0)
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  activities Activity[]
  articles  Article[]
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  image     String?
  region    String
  createdAt DateTime @default(now())
  status    ArticleStatus @default(PENDING)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

enum ArticleStatus {
  PENDING
  APPROVED
  REJECTED
}

model Quiz {
  id            Int      @id @default(autoincrement())
  question      String
  options       String   
  correctAnswer String
}

model Merchandise {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  image       String?
  cost        Int
}

model Activity {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type      String
  detail    String?
  coins     Int
  createdAt DateTime @default(now())
}
